<div class="row">
  <div class="col-sm-3">
    {{!-- Nav tabs --}}
    <ul class="navbar navbar__stacked" role="tablist">
      {{#each .}}
        <li role="presentation" class="{{state}}">
          <a href="#{{id}}" aria-controls="{{id}}" role="tab" data-toggle="tab">
            <span class="{{icon}}" aria-hidden="true"></span>
            {{title}}
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-9">
    {{!-- Tab panes --}}
    <div class="tab-content">
      {{#each .}}
        <div role="tabpanel" class="tab-pane fade {{state}} {{visible}}" id="{{id}}">
          <p>{{content}}</p>
        </div>
      {{/each}}
    </div>
  </div>
</div>
