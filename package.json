{
  "name": "garba-ui",
  "version": "3.0.0-Development",
  "description": "Garba UI will contain all common UI components to be shared among all company projects.",
  "main": "app/lib/garbaui.js",
  "author": [
    "Silvio Vitullo <svitullo@garbarino.com.ar>",
    "Nicolas Brizuela <nbrizuela@garbarino.com.ar>",
    "Esteban Calvi <ecalvi@garbarino.com.ar>"
  ],
  "scripts": {
    "build": "gulp build",
    "sass": "gulp sass",
    "lint-css": "gulp lint-styles",
    "browserify": "browserify ./app/javascript/garbaui.main.js -o ./dist/javascript/garbaui.js && uglifyjs ./dist/javascript/garbaui.js -o ./dist/javascript/garbaui.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbarino-com/garba-ui.git"
  },
  "keywords": [
    "styleguide",
    "sass",
    "workflow",
    "sass",
    "UI framework"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/garbarino-com/garba-ui/issues"
  },
  "homepage": "https://github.com/garbarino-com/garba-ui#readme",
  "precommit": {
    "tasks": [
      "npm run lint-css",
      "npm run build",
      "git add dist/"
    ]
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "gb_ui": "window:gb_ui"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.14",
    "frontend-settings": "git+https://github.com/garbarino-com/frontend-settings.git",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-debug": "^3.1.0",
    "gulp-shell": "^0.6.3",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-stylelint": "^3.9.0",
    "jquery": "1.12.3",
    "node-sass-importer": "^1.0.0",
    "node-sass-json-importer": "^3.0.2",
    "postcss-scss": "^0.4.1",
    "precommit": "^1.2.2",
    "slick-carousel": "^1.6.0",
    "stylelint-config-sass-guidelines": "^2.0.0",
    "uglify-js": "^3.0.20"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "bourbon": "^4.3.2",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-install": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-stylelint": "^3.9.0",
    "run-sequence": "^1.2.2"
  }
}
